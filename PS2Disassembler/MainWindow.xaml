<Window x:Class="PS2Disassembler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:PS2Disassembler.ViewModel"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="Emotion Engine Disassembler" Height="450" Width="800" 
        d:DataContext="{d:DesignInstance viewModel:MainViewVM}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <avalonedit:TextEditor Document="{Binding Input}" Margin="6" ShowLineNumbers="True" FontFamily="Consolas"/>
        <avalonedit:TextEditor x:Name="AssemblyEditor" Document="{Binding Output}" Grid.Column="1" Grid.Row="0" Margin="6" ShowLineNumbers="True" FontFamily="Consolas"/>
        <Button Content="Disassemble" Command="{Binding DisassembleCommand}" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" Margin="6"/>
    </Grid>
</Window>
