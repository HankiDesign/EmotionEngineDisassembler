<Window x:Class="PS2Disassembler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:PS2Disassembler.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        d:DataContext="{d:DesignInstance viewModel:MainViewVM}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox Text="{Binding Input, Mode=TwoWay}" Margin="6" AcceptsReturn="True" TextWrapping="Wrap"/>
        <TextBox Text="{Binding Output, Mode=TwoWay}" Grid.Column="1" Grid.Row="0" Margin="6" AcceptsReturn="True" TextWrapping="Wrap"/>
        <Button Content="Disassemble" Command="{Binding DisassembleCommand}" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" Margin="6"/>
    </Grid>
</Window>
